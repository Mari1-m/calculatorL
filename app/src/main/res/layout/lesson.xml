<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/real"
        android:layout_width="100dp"
        android:layout_height="100dp" >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_book"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop" />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/book_kitap"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/real"
        android:textSize="20sp"
        android:textColor="@color/project_color"
        android:textStyle="bold"
        android:layout_alignTop="@id/real"
        android:text="Mahabbat kizik mol jyldar" />
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azilkhan Nurshaikov"
        android:layout_below="@id/textView4"
        android:textColor="@color/project_color"
        android:layout_toRightOf="@id/real" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@id/real"

        android:numStars="5"
        android:rating="4"
        android:stepSize="1" />

    <Button
        android:id="@+id/oku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/oku_text"
        android:layout_below="@id/ratingBar"
        android:background="@color/project_color"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/project_color"
        android:textColor="@color/white"
        android:text="+"
        android:layout_margin="30dp"
/>
</RelativeLayout>